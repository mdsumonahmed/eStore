<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="#F8F6F6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:weightSum="2"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/oil"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Oil"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/smart_watch"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Smart Watch"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/rice"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Rice"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/cable"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Cable"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            >
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/cable"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Cable"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/mosla"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Mosla"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/phone_4"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Mobile"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:src="@drawable/smart_watch"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />
                <TextView
                    android:text="#Watch"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>